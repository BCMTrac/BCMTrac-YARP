{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"AllowedHosts": "*",
	"ReverseProxy": {
		"Routes": {
			"auth-jwks": { "ClusterId": "auth", "Match": { "Path": "/.well-known/{**catchall}" } },
			"auth-login-exact": { "ClusterId": "auth", "Match": { "Path": "/login" } },
			"auth-login": { "ClusterId": "auth", "Match": { "Path": "/login/{**catchall}" } },
			"auth-roles-exact": { "ClusterId": "auth", "Match": { "Path": "/roles-select" } },
			"auth-roles": { "ClusterId": "auth", "Match": { "Path": "/roles-select/{**catchall}" } },
			"auth-schemes-exact": { "ClusterId": "auth", "Match": { "Path": "/schemes-select" } },
			"auth-schemes": { "ClusterId": "auth", "Match": { "Path": "/schemes-select/{**catchall}" } },
			"auth-site-admin-exact": { "ClusterId": "auth", "Match": { "Path": "/site-admin" } },
			"auth-site-admin": { "ClusterId": "auth", "Match": { "Path": "/site-admin/{**catchall}" } },
			"auth-ui": { "ClusterId": "auth", "Match": { "Path": "/ui/{**catchall}" } },
			"monolith-catchall": { "ClusterId": "monolith", "Match": { "Path": "/{**catchall}" } }
		},
		"Clusters": {
			"auth": { "Destinations": { "d1": { "Address": "https://localhost:5001/" } } },
			"monolith": { "Destinations": { "d1": { "Address": "https://legacy.localtest.me:7443/" } } }
		}
	},
	"PublicCookie": { "Domain": "localtest.me", "SameSite": "None", "Secure": true },
	"JWT": {
		"ValidIssuer": "https://localhost:5001",
		"ValidAudience": "https://localhost:5001",
		"JwksUri": "https://localhost:5001/.well-known/jwks.json"
	},
	"Bridge": {
		"HeaderNames": ["X-Session-Id", "X-SessionID", "X-Legacy-Session-3"],
		"JwtHeaderName": "X-Auth-JWT",
		"JwtCookieName": "AuthJwt",
		"AdminBackOfficeCookieName": "AdminBackOffcieCookie"
	}
}
